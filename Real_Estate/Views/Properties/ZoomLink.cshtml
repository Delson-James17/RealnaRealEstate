@{
    ApplicationUser user = ViewBag.User;
}
<form class="forms">
    <div class="card mb-4">
        <div class="card-body text-center" style="margin: auto;">
            <img src="@user.UrlImages" alt="avatar"
                 class="rounded-circle img-fluid" style="width: 150px;">
            <h5 class="my-3" style="color: black;">@user.Name</h5>
            <p class="text-muted mb-1">@user.Address</p>
            <p class="text-muted mb-4">@user.PhoneNumber</p>
            <div class="d-flex justify-content-center mb-2">
                <a href="@user.Zoomlink" class="btn btn-primary">ZoomLink</a>
            </div>
        </div>
    </div>
</form>
</div>
