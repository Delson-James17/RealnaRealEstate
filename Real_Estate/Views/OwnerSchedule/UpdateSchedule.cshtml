@{
    ViewData["Title"] = "Update Schedule";
}
<head>
    <link rel="preconnect" href="https://fonts.gstatic.com">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;500;600&display=swap" rel="stylesheet">

</head>


@*<h2 class="text-center mb-4 text-white">@ViewData["Title"]</h2>*@
<h1 class="whiteText" style="text-align: center;">Update Schedule</h1>
<div id="collapseOne" class="accordion-collapse collapse show" aria-labelledby="headingOne" data-bs-parent="#accordionBasic">
 <div class="form-container">
            <form asp-action="UpdateSchedule" method="post" asp-controller="OwnerSchedule">
                <div class="row">
                    <div class="col-md-12">
                        <div class="form-group">
                            @*<label asp-for="dayOfWeek" class="control-label">Select Day of Schedule</label>
                            <select asp-for="dayOfWeek"  class="form-control">*@
                        @*<option value="Monday">Monday</option>
                        <option value="Tuesday">Tuesday</option>
                        <option value="Wednesday">Wednesday</option>
                        <option value="Thursday">Thursday</option>
                        <option value="Friday">Friday</option>
                        <option value="Saturday">Saturday</option>
                        <option value="Sunday">Sunday</option>*@
                            </select>
                            @*<span asp-validation-for="dayOfWeek" class="text-danger"></span>
                            <input type="text" asp-for="dayOfWeek" hidden class="form-control" />*@
                        </div>
                        <div class="form-group">
                            <label asp-for="startTime" class="form-label">Select a start time</label>
                            <input type="time" asp-for="startTime" class="form-control" />
                            <span asp-validation-for="startTime" class="text-validation"></span>
                        </div>
                        <div class="form-group">
                        <label asp-for="endTime" class="form-label">Select end time</label>
                            <input type="time" asp-for="endTime" class="form-control" />
                            <span asp-validation-for="endTime" class="text-validation"></span>
                        </div>
                    </div>
                </div>
            <div class="d-grid gap-2 col-6 mx-auto">
                <button type="submit" value="Create">Save</button>
                <a asp-action="OwnerScheduleList" class="whiteText" style="text-align: center;">Back to List</a>

            </div>
            </form>

</div>
</div>



