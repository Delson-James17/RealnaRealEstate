@model Appointment



<div class="d-flex justify-content-center">
    <div class="card-box ">
        <h4>Are you sure you want to delete this appointment?</h4>
<form asp-action="DeleteConfirmed" method="post">
    <input type="hidden" asp-for="Id" />
    <div class="form-group d-flex">
        <input type="submit" value="Yes" class="btn btn-danger" />
        <a asp-action="Index" class="btn btn-secondary">No</a>
    </div>
</form>
</div>
</div>
<style>
    .card-box {
        width: 400px;
        background-color: #fff;
        border: 1px solid #ddd;
        border-radius: 5px;
        padding: 20px;
        text-align: center;
    }

    .success-icon {
        color: #28a745;
        font-size: 48px;
        margin-bottom: 20px;
    }

    .btn {
        background-color: #F4A424;
        color: #fff;
        border: none;
        border-radius: 5px;
        padding: 10px 20px;
        font-size: 16px;
        cursor: pointer;
        width:50%;
        margin:10px;

    }

        .btn:hover {
            background-color: #0062cc;
        }

</style>
<script>
    function showSuccessMessage() {
        var cardBox = document.querySelector(".card-box");
        cardBox.style.display = "block";
    }

    // Code to hide the card box message
    function hideSuccessMessage() {
        var cardBox = document.querySelector(".card-box");
        cardBox.style.display = "none";
    }
</script>